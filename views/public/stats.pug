extends ../layout

block content

  style.
    .lead-header {
      margin-top: 137px;
      margin-bottom: 47px;
    }

    .tagline-header {
      margin-bottom: 70px;
    }

    .explainer {
      margin-top: 15px;
    }

    .pitch-header {
      font-size:30px;
    }

    .first-row {
      margin-top:35px;
    }

    .second-row {
      margin-top: 20px;
    }

    p.fw {
      font-size: 15px;
    }

    /** Redesign for narrow devices **/

    @media (max-width: 480px) {

      .lead-header {
        margin-top: 80px;
      }

      .pitch-header {
        font-size: 22px;
      }

      .row .col-sm-4 {
        margin-bottom:52px;
      }

      .first-row {
        margin-bottom: 0px;
      }

      .second-row {
        margin-top: 0px;
      }
      /* styles for mobile browsers smaller than 480px; (iPhone) */
    }

  div.container(style="text-align:center")
    hr

    .row.first-row
      .col-sm-4
        h2.pitch-header.fw #{channelAmount} Channels &nbsp
          i.fa.fa-users
      .col-sm-4
        h2.pitch-header.fw #{mediaAmount} Uploads &nbsp
          i.fa.fa-upload
      .col-sm-4
        h2.pitch-header.fw #{viewAmount} Views &nbsp
          i.fa.fa-eye
